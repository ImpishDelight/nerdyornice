{{! This is the post loop - each post will be output using this markup }}
<div class="row gifts">
    {{#foreach posts columns=3}}
        {{#if featured}}

            <article class="{{post_class}} {{#if @rowStart}}desktop-12 tablet-6 mobile-3{{else}}desktop-6 tablet-3 mobile-3{{/if}}">
                <a href="{{url}}">
                    <section class="post-header">
                        {{#if image}}<div class="product-img-wrapper"><div class="product-img" style="background-image: url({{image}});"></div></div>{{/if}}
                    </section>
                </a>
                <aside class="post-subtitle">
                    <span>{{title}}</span>
                </aside>
            </article>

        {{/if}}
    {{/foreach}}
</div>

